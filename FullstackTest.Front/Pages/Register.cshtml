@page
@model FullstackTest.Front.Pages.RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h2>Cadastro de Usuário</h2>

<form method="post">
    <div>
        <label>Nome completo:</label>
        <input asp-for="RegisterRequest.FullName" />
    </div>
    <div>
        <label>Usuário:</label>
        <input asp-for="RegisterRequest.Username" />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="RegisterRequest.Email" />
    </div>
    <div>
        <label>Senha:</label>   
        <input asp-for="RegisterRequest.Password" type="password" />
    </div>

    <button type="submit">Cadastrar</button>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p style="color:red">@Model.ErrorMessage</p>
    }
</form>
